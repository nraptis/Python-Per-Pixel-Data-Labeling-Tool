{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Doctor Mate Pro XL",
            "type": "debugpy",
            "request": "launch",
            "program": "main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "suppressMultipleSessionWarning": true
        }
    ],
    "tasks": [
        {
            "label": "kill-running",
            "type": "shell",
            "command": "echo Killing running tasks...",
            "problemMatcher": [],
            "options": {
                "shell": {
                    "executable": "/bin/bash",
                    "args": ["-c"]
                }
            }
        },
        {
            "label": "kill-old-opengl",
            "type": "shell",
            "command": "pkill -f 'python .*main_opengl.py' || true",
            "problemMatcher": []
        }
    ]
}